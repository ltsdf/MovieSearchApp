@using MovieSearchApp.App.Services
@inject IOmdbClient Client
@implements IDisposable

@if (!string.IsNullOrWhiteSpace(_rating))
{
    <span class="ipc-rating-star ipc-rating-star--base ipc-rating-star--imdb ms-1"
          title="IMDb rating"
          aria-label="@($"IMDb rating {_rating}{(string.IsNullOrWhiteSpace(_votes) ? string.Empty : $" based on {_votes} votes")}")">
        <svg class="ipc-icon" width="24" height="24" viewBox="002424" fill="currentColor" role="img" aria-hidden="true">
            <path d="M12 20.1l5.82 3.682c1.066.675 2.37-.322 2.09-1.584l-1.543-6.926 5.146-4.667c.94-.85.435-2.465-.799-2.567l-6.773-.602L13.29.89a1.38 1.38 0 0 0-2.581 0l-2.65 6.53-6.774.602C.052 8.126-.453 9.74.486 10.59l5.147 4.666-1.542 6.926c-.28 1.262 1.023 2.26 2.09 1.585L12 20.099z"></path>
        </svg>
        <span class="ipc-rating-star--rating">@_rating</span>
        @if (!string.IsNullOrWhiteSpace(_votes))
        {
            <span class="ipc-rating-star--voteCount">(@_votes)</span>
        }
    </span>
}

@code {
    [Parameter] public string? ImdbId { get; set; }
    [Parameter] public string? Rating { get; set; }
    [Parameter] public string? Votes { get; set; }

    private string? _rating;
    private string? _votes;
    private CancellationTokenSource? _cts;

    protected override async Task OnParametersSetAsync()
    {
        _cts?.Cancel();
        _cts?.Dispose();
        _cts = null;
        _rating = null;
        _votes = null;

        // Prefer provided values (e.g., on details view) to avoid refetch
        if (UseProvidedValues()) return;

        if (string.IsNullOrWhiteSpace(ImdbId))
            return;

        _cts = new CancellationTokenSource();
        try
        {
            var details = await Client.GetDetailsAsync(ImdbId!, _cts.Token);
            var r = details?.ImdbRating;
            var v = details?.ImdbVotes;
            if (IsValid(r))
            {
                _rating = r!;
                if (IsValid(v))
                    _votes = v!;
                StateHasChanged();
            }
        }
        catch
        {
            // ignore errors: badge simply won't render
        }
    }

    private bool UseProvidedValues()
    {
        if (IsValid(Rating))
        {
            _rating = Rating!;
            if (IsValid(Votes))
                _votes = Votes!;
            return true;
        }
        return false;
    }

    private static bool IsValid(string? s)
        => !string.IsNullOrWhiteSpace(s) && !string.Equals(s, "N/A", StringComparison.OrdinalIgnoreCase);

    public void Dispose()
    {
        _cts?.Cancel();
        _cts?.Dispose();
    }
}
